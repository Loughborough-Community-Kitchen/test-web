---
interface Props {
  title: string;
  subtitle?: string;
  primaryCtaText: string;
  primaryCtaLink: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title,
  subtitle,
  primaryCtaText,
  primaryCtaLink,
  secondaryCtaText,
  secondaryCtaLink
} = Astro.props;
---

<section class="hero">
  <div class="hero-inner">
    <h1>{title}</h1>

    {subtitle && <p class="subtitle">{subtitle}</p>}

    <div class="hero-actions">
      <a href={primaryCtaLink} class="btn primary">
        {primaryCtaText}
      </a>

      {secondaryCtaText && secondaryCtaLink && (
        <a href={secondaryCtaLink} class="btn secondary">
          {secondaryCtaText}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    background-color: #14532d; /* CHANGE THIS to your brand colour */
    color: white;
    padding: 4rem 1.5rem;
  }

  .hero-inner {
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.125rem;
    max-width: 650px;
    margin: 0 auto 2rem;
    opacity: 0.95;
  }

  .hero-actions {
    display: flex;
    flex-direction: column; /* mobile stack */
    gap: 1rem;
    align-items: center;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.75rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    min-width: 220px;
    text-align: center;
  }

  .btn.primary {
    background-color: #ffffff;
    color: #14532d;
  }

  .btn.primary:hover {
    background-color: #f3f4f6;
  }

  .btn.secondary {
    border: 2px solid white;
    color: white;
  }

  .btn.secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  @media (min-width: 768px) {
    .hero-actions {
      flex-direction: row; /* desktop inline */
      justify-content: center;
    }
  }
</style>
