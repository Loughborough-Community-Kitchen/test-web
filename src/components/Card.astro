---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
}

const { title, description, href, icon } = Astro.props;
---

<a href={href} class="card">
  {icon && <div class="icon">{icon}</div>}

  <h3>{title}</h3>
  <p>{description}</p>

  <span class="cta">Learn more â†’</span>
</a>

<style>
  .card {
    display: block;
    width: 100%;
    max-width: 100%;
    padding: 1.5rem;
    background-color: #ffffff;
    border-radius: 16px;
    border: 1px solid #e5e7eb;
    text-decoration: none;
    color: #111827;

    /* ðŸ”’ CRITICAL SAFETY RULES */
    position: static;     /* prevents absolute overlap */
    height: auto;         /* let content define height */
    overflow: visible;    /* prevents clipping */
  }

  .icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
  }

  p {
    margin: 0;
    line-height: 1.5;
    color: #4b5563;
  }

  .cta {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 600;
    color: #2563eb;
  }
</style>
